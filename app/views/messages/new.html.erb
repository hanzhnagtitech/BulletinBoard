<h1>Messages#new</h1>

<% unless current_user %>
<p>You will post as "Guest"</p>
<% end %>

<%= form_for(@message, :html => {:class => 'form'}, :url => {:controller => :messages, :action => :confirm}) do |f| %>

  <% if @message.errors.any? %>
    <% @message.errors.full_messages.each do |err| %>
      <font color="red"><%= err %></font><br>
    <% end %>
  <% end %>
  
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'validate[required]' %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  
  <div class="actions">
    <%= f.submit "Next" %>
  </div>
<% end %>

<br>
<%= link_to 'Back', :back %>