<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form'}) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field" >
    <%= f.label :email %><br />
    <%= f.email_field :email, :class => 'validate[required]' %>
  </div>

	<div class="field">
		<%= f.label :username %><br />
		<%= f.text_field :username, :class => 'validate[required]' %>
	</div>

  <div class="field">
    <%= f.label :password %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <br />
    <%= f.password_field :password, autocomplete: "off", :class => 'validate[required]' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'validate[required]' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
